<!--pages/editor/editor.wxml-->
<view class="container">
  <input model:value="{{title}}" class="item" placeholder="标题"/>
  <input model:value="{{author}}" class="item" placeholder="作者"/>
  <input model:value="{{time}}" class="item" placeholder="时间"/>

  <view bindtap="uploadCover" class="addImage">增加封面图片</view>
  <image src="{{coverURL}}" wx:if="{{coverURL}}"></image>

  <view >文章类别</view>
  <view class="type2">
    <radio-group bindchange="radioChange">
      <label wx:for="{{items}}" wx:key="{{item.value}}">
        <view>
          <radio value="{{item.value}}" checked="true"/>
        </view>
        <view class="type">{{item.name}}</view>
      </label>
    </radio-group>
  </view>

  <rich-text bind:get_content="get_content"></rich-text> 

</view>






