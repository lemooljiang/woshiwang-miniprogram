<!--pages/reader/reader.wxml-->
<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}" wx:for="{{reader}}">
                    <view class="reader-item">
                        <navigator url="../detail/detail?id={{item._id}}">
                            <image src="{{item.coverURL}}" mode='widthFix' class='image'></image>
                        </navigator>
                        <navigator url="../detail/detail?id={{item._id}}">
                            <view class="title">{{item.title}}</view>
                        </navigator>
                        <view class="author">{{item.author}}  {{item.time}}</view>
                        <view>{{item.content}}</view>
                    </view>
                </view>

                <view class="weui-tab__content" hidden="{{activeIndex != 1}}" wx:for="{{reader}}">
                    <view class="reader-item">
                        <navigator url="../detail/detail?id={{item._id}}">
                            <image src="{{item.coverURL}}" mode='widthFix' class='image'></image>
                        </navigator>
                        <navigator url="../detail/detail?id={{item._id}}">
                            <view class="title">{{item.title}}</view>
                        </navigator>
                        <view class="author">{{item.author}}  {{item.time}}</view>
                        <view>{{item.content}}</view>
                    </view>
                </view>

                <view class="weui-tab__content" hidden="{{activeIndex != 2}}" wx:for="{{reader}}">
                    <view class="reader-item">
                        <navigator url="../detail/detail?id={{item._id}}">
                            <image src="{{item.coverURL}}" mode='widthFix' class='image'></image>
                        </navigator>
                        <navigator url="../detail/detail?id={{item._id}}">
                            <view class="title">{{item.title}}</view>
                        </navigator>
                        <view class="author">{{item.author}}  {{item.time}}</view>
                        <view>{{item.content}}</view>
                    </view>
                </view>

                <view class="weui-tab__content" hidden="{{activeIndex != 3}}" wx:for="{{reader}}">
                    <view class="reader-item">
                        <navigator url="../detail/detail?id={{item._id}}">
                            <image src="{{item.coverURL}}" mode='widthFix' class='image'></image>
                        </navigator>
                        <navigator url="../detail/detail?id={{item._id}}">
                            <view class="title">{{item.title}}</view>
                        </navigator>
                        <view class="author">{{item.author}}  {{item.time}}</view>
                        <view>{{item.content}}</view>
                    </view>
                </view>

            </view>
        </view>
    </view>
</view>

